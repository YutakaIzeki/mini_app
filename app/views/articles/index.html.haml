- @articles.each do |article|
  .row
    .col.s12.m6
      .card.blue-grey.darken-1
        .card-content.white-text
          / %span.card-title Card Title
          %p
            = article.content
        .card-action
          %a{:href => "#"} show
          = link_to 'edit', edit_article_path(article.id), method: :get
          = link_to 'delete', article_path(article.id), method: :delete
